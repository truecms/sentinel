FROM postgres:15

# Copy initialization scripts
COPY scripts/sql/init.sql /docker-entrypoint-initdb.d/01-init.sql
COPY scripts/sql/tables.sql /docker-entrypoint-initdb.d/02-tables.sql
COPY scripts/sql/seed.sql /docker-entrypoint-initdb.d/03-seed.sql

# Set proper permissions
RUN chmod 755 /docker-entrypoint-initdb.d/*.sql
